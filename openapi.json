        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "https://stellarbeat.io/schemas/node-snapshot.json"
                  }
                }
              }
            }
          }
        }
      }
    },
