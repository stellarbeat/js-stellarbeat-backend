    "/v1/organization/{id}": {
      "get": {
        "summary": "Get an organization by id",
        "description": "Returns the requested organization",
        "tags": [
          "Organization"
        ],
        "operationId": "getOrganizationById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
