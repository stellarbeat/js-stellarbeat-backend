{
  "compilerOptions": {
    "rootDirs": ["src"],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "lib",
    "sourceMap": false,
    "types": ["node", "jest", "reflect-metadata"],
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/**/__tests__/*",
    "src/**/__mocks__/*",
    "src/**/__fixtures__/*",
  ]
}