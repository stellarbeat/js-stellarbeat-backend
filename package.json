  "version": "0.4.0",
  "description": "Backend & api",
  "repository": {
    "type": "git",
    "url": "https://github.com/stellarbeat/js-stellarbeat-backend.git"
  },
  "scripts": {
    "build": "tsc --build && cp -R src/network-event-notifications/templates lib/network-event-notifications/templates",
    "test:unit": "jest",
    "test:integration": "jest -c jest.integration.config.js --runInBand",
    "test": "yarn test:unit; yarn test:integration",
    "heroku-postbuild": "yarn run build",
    "build-and-update-network": "yarn run build; node lib/network/infrastructure/cli/update-network.js",
    "update-network": "node lib/network-update/infrastructure/cli/update-network",
    "build-and-start-api": "yarn run build; node lib/api/api.js",
    "build-and-seed-db": "yarn run build; node lib/network/infrastructure/cli/seed-db",
    "seed-db": "node lib/network/infrastructure/cli/seed-db",
    "init-rollup": "node lib/network/infrastructure/cli/init-rollup-table",
    "start-api": "node lib/api/api.js",
    "retrieve-home-domain": "node lib/network/infrastructure/cli/retrieve-home-domain.js"
  },
  "author": "pieterjan84@github",
  "license": "MIT",
